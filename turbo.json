{
  "$schema": "https://turbo.build/json-schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.local", ".env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"],
      "cache": true,
      "inputs": ["src/**", "tsconfig.json", "next.config.*"]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "outputs": [],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
